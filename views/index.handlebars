{{!-- 套用boostrap 寫的 Movie List 的 HTML --}}
<div class="container mt-5">
  <!-- search bar -->
  {{!--<form action="/search"> => 讓這個表單往路由 /search 的位置發送  --}}
  {{!--<input type="text" name="keyword" => ?後面的關鍵字為keyword  --}}
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/search"> 
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="Enter movie name to search..."
            aria-label="Movie Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  
 {{!-- test for each 迴圈 --}}
  <div>
    {{#each numbers}}
    <span>---</span>
    <div class="d-inline-flex align-items-center justify-content-center bg-info text-white rounded-circle my-4"
      style="width: 30px; height: 30px;">
      {{this}}
    </div>
    <span>---</span>
    {{/each}}
  </div>
  
  <!-- movie list -->
  <div class="row" id="data-panel">
    {{!-- 透過 #each 迴圈來處理多筆資料，就可以讓程式碼變得精簡很多。我們只需將資料從 app.js 傳進來，接著在要變更內容的地方，使用 {{ }} 帶入變數，然後再用迴圈把 movies 中的所有的電影都顯示出來。 --}}
    {{#each movies}}
      <!-- do something with movie here ... -->
      <div class="col-sm-3">
        <a href="/movies/{{this.id}}" class="text-secondary">
          <div class="card mb-2">
            <img class="card-img-top" src="https://movie-list.alphacamp.io/posters/{{this.image}}"
              alt="Card image cap">
            <div class="card-body movie-item-body">
              <h6 class="card-title">{{this.title}}</h6>
            </div>
          </div>
        </a>
      </div>
    {{/each}}
